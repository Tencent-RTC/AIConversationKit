<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="329dp"
    android:layout_height="28dp"
    android:background="@color/conversation_bg_color_default"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/conversation_tv_feedback_name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/conversation_text_color_primary95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/conversation_guide_line_center_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/conversation_ifv_first_star"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/conversation_ic_star_unselected"
        app:layout_constraintStart_toEndOf="@+id/conversation_guide_line_center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/conversation_ifv_second_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/conversation_ifv_second_star"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/conversation_ic_star_unselected"
        app:layout_constraintStart_toEndOf="@+id/conversation_ifv_first_star"
        app:layout_constraintEnd_toStartOf="@+id/conversation_ifv_third_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/conversation_ifv_third_star"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/conversation_ic_star_unselected"
        app:layout_constraintStart_toEndOf="@+id/conversation_ifv_second_star"
        app:layout_constraintEnd_toStartOf="@+id/conversation_ifv_fourth_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/conversation_ifv_fourth_star"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/conversation_ic_star_unselected"
        app:layout_constraintStart_toEndOf="@+id/conversation_ifv_third_star"
        app:layout_constraintEnd_toStartOf="@+id/conversation_ifv_fifth_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/conversation_ifv_fifth_star"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/conversation_ic_star_unselected"
        app:layout_constraintStart_toEndOf="@+id/conversation_ifv_fourth_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

</androidx.constraintlayout.widget.ConstraintLayout>
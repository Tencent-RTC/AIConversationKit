<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="22dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/conversation_ic_tip_interrupt"/>

    <TextView
        android:id="@+id/conversation_tv_operation"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="6dp"
        android:text="@string/conversation_tap_to_interrupt"
        android:textSize="14sp"
        android:textColor="@color/conversation_text_color_secondary" />

</LinearLayout>